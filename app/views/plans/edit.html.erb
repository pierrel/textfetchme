<h1>Editing plan</h1>

<% form_for(@plan) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :number_of_triggers %><br />
    <%= f.text_field :number_of_triggers %>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @plan %> |
<%= link_to 'Back', plans_path %>
