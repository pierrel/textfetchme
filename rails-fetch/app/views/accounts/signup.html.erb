<%= error_messages_for :user %>
<% form_for :user, :html => {:id => 'signup'} do |f| -%>
<table id="basic_info" cellspacing="0">
	<tr>
		<td>email address</td> <td><%= f.text_field :login %></td>
	</tr>
	<tr>
		<td>password</td> <td><%= f.password_field :password %></td>
	</tr>
	<tr>
		<td>confirm password</td> <td><%= f.password_field :password_confirmation %></td>
	</tr>
</table>

<p>phone number</p>
<%= f.text_field :phone %>
<p><%= submit_tag 'Sign up' %></p>
<% end -%>

